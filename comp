services:
  mariadb:
    image: mariadb
    build:
      context: ./mariadb
    container_name: mariadb
    ports:
      - "3306:3306"
    volumes:
      - mariadb_volume:/var/lib/mysql
    networks:
      - net
    restart: unless-stopped
    env_file: .env

  wordpress:
    image: wordpress
    build:
      context: ./wordpress
    container_name: wordpress
    depends_on:
      - mariadb
    ports:
      - "9000:9000"
    volumes:
      - wordpress_volume:/var/www/html
    networks:
      - net
    restart: unless-stopped
    env_file: .env

volumes:
  mariadb_volume:
    driver: local
    driver_opts:
      type: none
      device: /home/najeuneh/Desktop/inception/mariadb
      o: bind

  wordpress_volume:
    driver: local
    driver_opts:
      type: none
      device: /home/najeuneh/Desktop/inception/wordpress
      o: bind

networks:
  net:
